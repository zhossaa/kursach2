<Window x:Class="kursach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursach"
        mc:Ignorable="d"
        Title="MainWindow" Height="518" Width="360">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF65330F"/>
            <GradientStop Color="#FFEFC83C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="133,0,137,430">
        <Grid.Background>
            <ImageBrush ImageSource="/icons8-brezel-50.png"/>
        </Grid.Background>
        <TextBox x:Name="login" TextWrapping="Wrap" Text="Логин" Margin="-100,143,-96,-122"/>
        <PasswordBox x:Name="password"   Margin="-100,206,-96,-185"/>
        <Label Content="Пароль" Margin="-100,185,100,-185"/>
        <Button Content="Вход" Margin="-100,314,-96,-291" Click="Вход_Click"/>
        <Button Content="Регистрация" Margin="-100,376,-96,-354" Click="Регистрация_Click"/>





    </Grid>
</Window>
